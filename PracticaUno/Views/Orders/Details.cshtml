@model PracticaUno.Models.Orders

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-center">Order details</h2>

<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Order date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.order_date)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt class = "col-sm-2">
            Customer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customers.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employees)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employees.first_name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.order_id" class="btn btn-outline-primary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
