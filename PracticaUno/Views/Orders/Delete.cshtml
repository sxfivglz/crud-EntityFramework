@model PracticaUno.Models.Orders

@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-danger text-center">Are you sure you want to delete this Order?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Order date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.order_date)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt class = "col-sm-2">
           Customer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customers.Name)
        </dd>
        <dt class = "col-sm-2">
           Employees
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employees.first_name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="order_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
