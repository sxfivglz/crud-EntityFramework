@model PracticaUno.Models.Product_categories

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-center">Category details</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.category_name)
        </dd>
      
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.category_id" class="btn btn-outline-primary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>

</div>
