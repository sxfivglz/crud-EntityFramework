@model PracticaUno.Models.Product_categories

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-danger text-center">Are you sure you want to delete this Category?</h2>
<div>
 
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.category_name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="category_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
