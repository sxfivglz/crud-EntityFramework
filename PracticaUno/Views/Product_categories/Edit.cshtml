@model PracticaUno.Models.Product_categories

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-center">Edit category</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="category_id" />
            <div class="form-group">
                <label asp-for="category_name" class="control-label">Category</label>
                <input asp-for="category_name" class="form-control" />
                <span asp-validation-for="category_name" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
