@model PracticaUno.Models.Locations

@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-danger text-center">Are you sure you want to delete this Location?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.address)
        </dd>
        <dt class = "col-sm-2">
            Postal code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.postal_code)
        </dd>
        <dt class = "col-sm-2">
            City
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.city)
        </dd>
        <dt class = "col-sm-2">
           State
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.state)
        </dd>
        <dt class = "col-sm-2">
           Country
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Countries.country_name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="location_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
