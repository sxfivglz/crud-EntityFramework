@model PracticaUno.Models.Warehouses

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-center">Edit warehouse</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="warehouse_id" />
            <div class="form-group">
                <label asp-for="warehouse_name" class="control-label">Warehouse</label>
                <input asp-for="warehouse_name" class="form-control" />
                <span asp-validation-for="warehouse_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="location_id" class="control-label">Location</label>
                <select asp-for="location_id" class="form-control" asp-items="ViewBag.location_id"></select>
                <span asp-validation-for="location_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
