@model PracticaUno.Models.Warehouses

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-danger text-center">Are you sure you want to delete this Warehouse?</h2>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Warehouse
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.warehouse_name)
        </dd>
        <dt class = "col-sm-2">
            Location
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Locations.location_id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="warehouse_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
