@model PracticaUno.Models.Regions

@{
    ViewData["Title"] = "Delete";
}


<h2 class="text-danger text-center">Are you sure you want to delete this Region?</h2>
<div>
    <h4>Regions</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Region name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.region_name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="region_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
