@model PracticaUno.Models.Countries

@{
    ViewData["Title"] = "Create";
}

<br />
<h1 class="text-center">Create new Country</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="country_name" class="control-label">Country name</label>
                <input asp-for="country_name" class="form-control" />
                <span asp-validation-for="country_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="region_id" class="control-label">Region</label>
                <select asp-for="region_id" class="form-control" asp-items="ViewBag.region_id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
