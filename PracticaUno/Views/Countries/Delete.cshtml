@model PracticaUno.Models.Countries

@{
    ViewData["Title"] = "Delete";
}


<br />
<h2 class="text-danger text-center">Are you sure you want to delete this Country?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Country name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.country_name)
        </dd>
        <dt class = "col-sm-2">
          Region
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Regions.region_name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="country_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
