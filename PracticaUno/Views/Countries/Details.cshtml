@model PracticaUno.Models.Countries

@{
    ViewData["Title"] = "Details";
}
<br />
<h2 class="text-center">Country details</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Country name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.country_name)
        </dd>
        <dt class = "col-sm-2">
            Region
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Regions.region_name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.country_id" class="btn btn-outline-primary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
