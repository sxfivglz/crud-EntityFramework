@model PracticaUno.Models.Products

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-danger text-center">Are you sure you want to delete this Product?</h2>
<div>
    <h4>Products</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Product name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product_name)
        </dd>
        <dt class = "col-sm-2">
           Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
           Standard cost
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Standard_cost)
        </dd>
        <dt class = "col-sm-2">
            List price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.List_price)
        </dd>
        <dt class = "col-sm-2">
           Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product_Categories.category_name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="product_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
